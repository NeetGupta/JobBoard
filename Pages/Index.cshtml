@page
@model JobBoard.Pages.IndexModel
@{
    ViewData["Title"] = "Job Listings";
}

<h1>Job Listings</h1>

<a href="/Create">Post a Job</a>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Company</th>
            <th>Location</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Company</td>
                <td>@job.Location</td>
                <td>@job.Type</td>
            </tr>
        }
    </tbody>
</table>
